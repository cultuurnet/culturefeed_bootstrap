name = Culturefeed Bootstrap
description = Bootstrap subtheme to use with the culturefeed module suite (https://github.com/cultuurnet/culturefeed)
version = 0.1
core = 7.x
base theme = bootstrap

; Regions
regions[navigation]     = 'Navigation'
regions[header]         = 'Top Bar'
regions[highlighted]    = 'Highlighted'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[sidebar_first]  = 'Primary'
regions[sidebar_second] = 'Secondary'
regions[content_bottom] = 'Content Bottom'
regions[footer]         = 'Footer'

; Stylesheets
stylesheets[all][] =  less/style.less
; TEMP
stylesheets[all][] =  css/bootstrap-switch.css


less[vars][@brand-primary]      = #428bca
less[vars][@brand-success]      = #5cb85c
less[vars][@brand-warning]      = #f0ad4e
less[vars][@brand-danger]       = #d9534f
less[vars][@brand-info]         = #5bc0de
less[vars][@border-radius-base]       = 4px
less[vars][@border-radius-large]      = 6px
less[vars][@border-radius-small]      = 3px
less[vars][@font-family-sans-serif]   = "Helvetica Neue", Helvetica, Arial, sans-serif
less[vars][@font-family-serif]        = Georgia, "Times New Roman", Times, serif

; Scripts
scripts[] = 'js/culturefeed-bootstrap.js'

;**********************************
; METHOD 1: Bootstrap Source Files
;**********************************
;
; ; Scripts
scripts[] = 'js/bootstrap-switch.js'
; scripts[] = 'bootstrap/js/affix.js'
; scripts[] = 'bootstrap/js/alert.js'
; scripts[] = 'bootstrap/js/button.js'
; scripts[] = 'bootstrap/js/carousel.js'
scripts[] = 'bootstrap/js/collapse.js'
scripts[] = 'bootstrap/js/dropdown.js'
; scripts[] = 'bootstrap/js/modal.js'
scripts[] = 'bootstrap/js/tooltip.js'
scripts[] = 'bootstrap/js/popover.js'
; scripts[] = 'bootstrap/js/scrollspy.js'
scripts[] = 'bootstrap/js/tab.js'
scripts[] = 'bootstrap/js/transition.js'
; ; Settings inherited by base theme, uncomment to override.
; settings[toggle_name] = 1
; settings[toggle_search] = 0
; ; Disable the CDN as we are using our own source files.
settings[bootstrap_cdn] = ''



;*************************
; METHOD 2: Bootstrap CDN
;*************************
;
; ; Settings inherited by base theme, uncomment to override.
; ;settings[toggle_name] = 0
; ;settings[toggle_search] = 1
; ;settings[cdn_bootstrap] = 1
; ;settings[bootstrap_cdn] = 3.0.0

; Navbar
settings[bootstrap_navbar_position] = 'fixed-top'
settings[bootstrap_navbar_inverse] = 1

; Breadcrumbs
settings[bootstrap_breadcrumb] = 1
settings[bootstrap_breadcrumb_home] = 1
settings[bootstrap_breadcrumb_title] = 0

; Popovers
settings[bootstrap_popover_placement] = 'auto top'

; Tooltips
settings[bootstrap_tooltip_descriptions] = 0
settings[bootstrap_tooltip_placement] = 'auto top'

; Disable jquery_update dependency
simplytest_dependencies[] = ''

